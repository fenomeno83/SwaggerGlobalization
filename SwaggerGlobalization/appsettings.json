{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "AllowedHosts": "*",
  "Globalization": {
    "DefaultCulture": "it",
    "SupportedCultures": [ "it", "en" ],
    "Swagger": {
      "EnableAcceptLanguageParam": true,
      "EnableLocalizedDocumentation": true, //if enabled, it will be localize documentation; it will be use DefaultCulture if EnableMultilanguageDocumentation is disabled, or specific version language if it is enabled; the enums will always be localized even if this filter is disabled
      "EnableMultilanguageDocumentation": true, //if enabled, it will create as many versions (to localize if EnableLocalizedDocumentation is true) as there are supported languages; if enabled could be slow for large apis
      "EnableUITranslation": true

    }

  }
}
